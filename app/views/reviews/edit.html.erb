<% provide(:title, "Edit Review") %>
<h1>Update your review</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@review, url: review_path(@review.id)) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :location, "Location" %>
      <%= f.text_field :location, class: 'form-control' %>

      <%= f.label :job_title, "Job Title" %>
      <%= f.text_field :job_title, class: 'form-control' %>

      <%= f.label :term, "Term" %>
      <%= f.text_field :term, class: 'form-control' %>

      <%= f.label :year %>
      <%= f.text_field :year, class: 'form-control' %>

      <%= f.label :rating %>
      <%= f.text_field :rating, class: 'form-control' %>

      <%= f.label :salary %>
      <%= f.text_field :salary, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>


      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
<% provide(:title, 'New Company') %>
<h1>New Compant</h1>
<p>This will be a new review page for creating a new company.</p>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@review, url: companies_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Company Review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

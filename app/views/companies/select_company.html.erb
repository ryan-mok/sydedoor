<% provide(:title, 'Select Company') %>
<h1>Select Company</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@company, url: companies_path) do |f| %>
      <%= f.label :company %>
      <%= autocomplete_field_tag "company", "", autocomplete_company_name_companies_path,
                                 id_element: '#company_id_hidden',
                                 'data-auto-focus': true,
                                 'data-noMatchesLabel': 'No companies found. Please create one!',
                                 'min-length': 0 %>
      <%= f.hidden_field :name, id: "company_id_hidden" %>
    <% end %>
  </div>
</div>
